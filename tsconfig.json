{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true,
    // "importHelpers": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "./src",
    "./@types"
  ],
  "exclude": [
    "./node_modules",
  ]
}